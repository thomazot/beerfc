.brands
    width: viewport
    max-width: 100%
    margin: 0 auto 30px !important
    display: flex
    flex-flow: row wrap
    padding-top: 30px

    .owl-wrapper-outer
        background: none
        box-shadow: none

    &:before, &:after
        font-size: 20px
        font-weight: semibold

    &:before
        order: 1
        content: 'Principais'
        margin-right: 3px
        color: color2_bg

    &:after
        order: 2
        content: 'Marcas'
        color: color1_bg

    &__list
        positiion: relative
        display: flex !important
        justify-content: center
        align-items: center
        height: 110px
        box-shadow: 0 0 0 1px #e5eef5
        border-radius: 110px

        &:before
            content: ''
            width: 30px
            height: 30px
            border-top: solid 1px #e5eef5
            border-right: solid 1px #e5eef5
            position: absolute
            top: -15px
            left: 70px
            background: #fff
            transform: rotate(-45deg)
            z-index: 10

        .brands--carrossel &
            order: 3
            flex: 0 0 100%
            min-width: 0
            margin: 0
            padding: 0
            margin-top: 30px

    .owl-wrapper-outer
        border-right: 0

    &__item
        img
            height: auto

        a
            border: 0
            background: none

    .owl-prev, .owl-next, .owl-next:before
        background: none
        color: color1_bg
        box-shadow: none

    .owl-prev
        left: 0

    .owl-next
        right: 0
        left: auto

@media (min-width: (viewport + 90))
    .brands
        &__list
            .brands--carrossel &
                width: auto
                max-width: none
                margin-left: -45px
                margin-right: -45px
                flex: 0 0 calc(100% + 90px)
