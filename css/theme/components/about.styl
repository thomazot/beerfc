.about
    background: color2_bg
    padding: 16px
    margin: 40px -16px

    &__figure
        margin-top: -33px
        text-align: center

    &__img
        display: inline-block

    &__title
        padding: 35px 0
        font-size: 26px
        font-weight: semibold
        color: color1_bg

    &__content
        font-size: 14px
        font-weight: regular
        color: #fff
        line-height: 1.3

    &__actions
        padding: 35px 0

    &__link
        display: flex
        justify-content: center
        align-items: center
        width: 170px
        height: 58px
        font-size: 16px
        font-weight: bold
        color: color1_bg
        border: solid 1px color1_bg
        border-radius: 58px

        &:hover
            color: color1_bg

    &__main
        padding: 0 25px

@media (min-width: 993px)
    .about
        height: 500px

        &__container
            display: flex
            width: viewport
            max-width: 100%
            margin: 0 auto

        &__figure
            flex: 0 0 424px

        &__main
            flex: 1
            min-width: 0

        &__link
            &:hover
                background: color1_bg
                color: #fff