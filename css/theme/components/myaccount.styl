
.myaccount
    height: auto

    &__link
        display: flex
        flex-wrap: wrap
        justify-content: center
        align-items: center

        &:hover
            color: color1_bg

    &__register
        margin: 0 -16px -16px
        padding: 16px
        border-radius: 4px
        background: color1_bg

        .std
            h3
                font-size: 16px
                font-weight: bold
                color: color2_bg

            p
                font-size: 14px
                font-weight: regular
                line-height: 1.2
                color: #fff

        &-btn
            display: flex
            justify-content: center
            align-items: center
            padding: 0
            height: 50px
            border: solid 1px #fff
            box-shadow: none
            max-width: 150px
            font-size: 15px
            font-weight: medium

    &__login-btn
        width: 100%
        height: 50px
        max-width: 150px
        font-size: 15px
        font-weight: medium

    &__icon
        display: block
        width: 43px
        height: 33px
        flex: 0 0 100%

    &__label
        display: none
        font-size: 13px
        font-weight: medium
        color: color1_bg

    &__header
        i
            display: none
            font-size: 8px
            margin-left: 3px
            margin-bottom: -3px

    &__content
        .title
            font-size: 20px
            font-weight: medium
            color: color1_bg

    &__login
        label
            display: block
            font-size: 14px
            font-weight: regular
            color: #a7a7a7

    &__forgot
        position: static
        display: block
        margin-top: 10px
        font-size: 12px
        font-weight: regular
        color: #a7a7a7

        &:hover
            color: color2_bg

    .form-list
        .fields
            display: block

@media (min-width: 569px)
    .myaccount
        flex: 0 0 auto
        margin-left: 20px

@media (min-width: 993px)
    .myaccount
        &:hover
            .dog
                &-head
                    &-down
                        animation: tail 0.2s steps(1) infinite reverse

                    &-up
                        animation: tail 0.2s steps(1) infinite

            .cat
                &-tail
                    &-left
                        animation: tail 0.2s steps(1) infinite reverse

                    &-right
                        animation: tail 0.2s steps(1) infinite

        &__label, &__header i
            display: inline

        &__header
            padding: 10px 0
            position: relative
            z-index: 15

        &__register
            margin: 0 -25px -25px
            padding: 25px

        &__content
            top: 100%
            z-index: 10
            display: block
            border-radius: 4px
            box-shadow: inset 0 0 0 1px #e5eef5
            padding: 25px
            opacity: 0
            visibility: hidden
            transform: translateY(20%) translateX(-50%)
            transition: all 0.2s ease

            .drop--left &
                left: 50%
                transform: translateY(20%) translateX(-50%)

        &:hover
            .myaccount
                &__content
                    opacity: 1
                    visibility: visible
                    transform: translateY(0) translateX(-50%)

.dog
    fill: color1_bg

    &-head-down
        opacity: 0

.cat
    fill: color2_bg

    &-tail-left
        opacity: 0

@keyframes tail
    0%, 50%
        opacity: 0

    50%, 100%
        opacity: 1
